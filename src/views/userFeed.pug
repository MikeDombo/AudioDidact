div.col-md-6
	h2 Feed Items
	each ep, index in episodes
		div.card.mb-5
			div.card-body
				h4.card-title #{ep.title}
				h5.card-title.text-muted #{ep.author}
				
				if ep.isVideo
					div
						video.playback(controls style="max-width:100%; height:360px;" class="m-1" preload="none" poster="#{ep.thumbnail}")
							source(src="#{ep.episodeFile}" type="video/mp4") Your browser does not support the video element.
				else
					img(class="img-fluid img-thumbnail" src="#{ep.thumbnail}" style="max-height:300px;")
					audio.playback(controls style="width:100%" class="m-1" preload="none")
						source(src="#{ep.episodeFile}" type="audio/mpeg") Your browser does not support the audio element.
				button(class="btn btn-outline-info btn-large playspeed") Playback Speed: x
				div.card-text
					p !{ep.description}
